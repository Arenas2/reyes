extends ../index

block moreHead
	script(type="text/javascript" src="js/main/main.states.js")
	script(type="text/javascript" src="js/main/main.controller.js")
	link(type="text/css" rel="stylesheet", href="stylus/main.css")

block content

	.principal(ng-controller="mainCtrl as mainctrl" style="background-image : url(' {{background}} ')")
		header
			include ../partials/nav
		div(layout="row" layout-align="center center")
			.centro(flex="90" flex-md="100" flex-sm="100" flex-xs="100")
				main(ui-view="main" class="page")
		md-divider
		footer(layout="row" layout-align="space-around center")
			include ../partials/footer
